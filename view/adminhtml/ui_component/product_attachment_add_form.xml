<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">product_attachment_add_form.product_attachment_add_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">New Attachment</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
        <item name="config" xsi:type="array">
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Prince\Productattach\Block\Adminhtml\Edit\SaveButton"/>
            <button name="cancel" class="Prince\Productattach\Block\Adminhtml\Edit\CancelButton"/>
        </buttons>
        <namespace>product_attachment_add_form</namespace>
        <ajaxSave>true</ajaxSave>
        <ajaxSaveType>simple</ajaxSaveType>
        <dataScope>data</dataScope>
        <deps>
            <dep>product_attachment_add_form.product_attachment_add_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="product_attachment_add_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <validateUrl path="productattach/index/validate"/>
            <submitUrl path="productattach/index/save"/>
        </settings>
        <dataProvider class="Prince\Productattach\Ui\DataProvider\Product\AttachmentDataProvider" name="product_attachment_add_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>productattach_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="base_fieldset" sortOrder="10">
        <settings>
            <collapsible>false</collapsible>
            <label translate="true">Attachment Information</label>
        </settings>
        <field name="name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Name</label>
            </settings>
        </field>
        <field name="description" sortOrder="20" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Description</label>
            </settings>
        </field>
        <field name="url" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">URL</label>
            </settings>
        </field>
        <field name="store" sortOrder="40" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Store</label>
                <dataScope>store</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Store"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="customer_group" sortOrder="50" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>string</dataType>
                <label translate="true">Customer Group</label>
                <dataScope>customer_group</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Customer\Model\ResourceModel\Group\Collection"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="active" component="Magento_Ui/js/form/element/single-checkbox" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">product_attachment</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Status</label>
                <dataScope>active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
</form>
